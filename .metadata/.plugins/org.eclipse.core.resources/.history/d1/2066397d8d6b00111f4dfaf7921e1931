package broadway.kyle.html;

import java.io.PrintStream;
import java.util.HashSet;
import java.util.Set;

public abstract class GenericTag implements Renderer
{
    private static final NullText NULL_TEXT = new NullText();

    protected Set<Renderer> toRenderSet = new HashSet<Renderer>();
    protected Text text = NULL_TEXT;
    protected String startTag = "<>";
    protected String endTag = "</>";

    @Override
    public void render(PrintStream stream)
    {
    }

    public GenericTag()
    {
    }

    public GenericTag(String text)
    {
        this.text = new Text(text);
    }

    public void add(String text)
    {
        this.text = new Text(text);
    }

    public void add(Renderer toRender)
    {
        this.toRenderSet.add(toRender);
    }
}
