package broadway.kyle;

import java.util.Map;

import com.javadude.beans.Client;
import com.javadude.command.Command;
import com.javadude.command.UndoManager;

public class PurchaseCartAction implements ActionStrategy
{

    private Client client;
    private UndoManager commandManager;
    private ProductHolder cart;

    /**
     * Constructor.
     * 
     * 
     * @param client
     * The client to execute commands
     * @param commandManager
     * The undo manager handling execution
     */
    public PurchaseCartAction(Client client, UndoManager commandManager)
    {
        super();
        this.client = client;
        this.commandManager = commandManager;
    }

    @Override
    public void go(Map<String, String[]> parameters)
    {
        //create the purchase cart command
        Command purchaseCartCommand = new PurchaseCommand(client, cart);
    }

}
